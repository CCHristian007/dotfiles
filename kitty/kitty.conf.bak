font_family JetBrainsMono Nerd Font
font_size 10
shell /usr/bin/zsh
background_opacity 0.7
window_padding_width 10



# -------------------------
# Kitty Terminal Theme - Sukuna Edition
# -------------------------

# Font
font_family      JetBrainsMono Nerd Font
bold_font        auto
italic_font      auto
font_size        11
enable_ligatures yes

# Window
window_padding_width 10
background_opacity 1.0

# Colors
foreground        #cdd6f4
background        #1e1e2e
cursor             #f5c2e7
selection_foreground #1e1e2e
selection_background #45475a

# Normal colors
color0  #1e1e2e
color1  #f38ba8
color2  #a6e3a1
color3  #f9e2af
color4  #89b4fa
color5  #f5c2e7
color6  #94e2d5
color7  #bac2de

# Bright colors
color8  #585b70
color9  #f38ba8
color10 #a6e3a1
color11 #f9e2af
color12 #89b4fa
color13 #f5c2e7
color14 #94e2d5
color15 #a6adc8

# Cursor
cursor_shape block
cursor_blink_interval 0.5

# Tabs
show_tab_bar yes
tab_bar_style powerline

# Scrolling
scrollback_lines 10000